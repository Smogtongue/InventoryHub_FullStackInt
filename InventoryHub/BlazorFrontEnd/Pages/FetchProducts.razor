@page "/fetchproducts"

<h3>Product List</h3>

<ul>
   @if (products != null)
    {
        foreach (var product in products)
        {
            <li>@product.Name - $@product.Price</li>
        }
    }
    else
    {
        <li>Loading...</li>
    }
</ul>

@code {
    private Product[]? products;

//API call logic //
   protected override async Task OnInitializedAsync()
{
    try
    {
        HttpClient client = new HttpClient { BaseAddress = new Uri("https://localhost:5001") };
        products = await client.GetFromJsonAsync<Product[]>("/api/productlist"); // Updated route
    }
    catch (Exception ex)
    {
        Console.WriteLine($"An error occurred: {ex.Message}");
    }
}

//End of API call logic //

    public class Product
{
    public int Id { get; set; }
    public string Name { get; set; } = string.Empty; // Provide a default value
    public double Price { get; set; }
    public int Stock { get; set; }
}

}
